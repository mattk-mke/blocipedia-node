<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>
      <div style="display: flex; align-items:center;">
        <h1><%= wiki.title %> <small class="text-muted"><%= wiki.private ? "(Private)" : "(Public)" %></small></h1>
      </div>
      <% if (currentUser) { %>
        <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
        <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      <% } %>
      <div class="col-auto border p-2 mt-2"><%- htmlView %></div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
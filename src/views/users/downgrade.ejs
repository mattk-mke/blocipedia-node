<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
    <link rel="stylesheet" href="/css/downgrade.css">

  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container downgrade">

      <% include ../static/partials/messages.ejs %>

      <h3>Downgrade to Standard</h3>
      <p><strong class="text-danger">Note: </strong>Any private wikis you have created will be converted to public status.</p>
      <p>Standard accounts can still create as many public wikis as needed!</p>

      <form action="/users/downgrade" method="POST">
        <div class="form-row align-items-center">
          <div class="col-auto">
            <input type="checkbox" class="form-check-inline" id="confirm" onchange="document.getElementById('submit').disabled = !this.checked;"/>
            <label for="confirm" class="form-check-label">Are you sure?</label>
          </div>
          <div class="col-auto">
            <input type="submit" value="Downgrade Account" class="btn btn-danger" id="submit" disabled/>
          </div>
        </div>
      </form>
    </main>
    <% include ../static/partials/foot.ejs %>   
    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>